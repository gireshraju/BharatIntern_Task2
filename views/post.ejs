<!-- post.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= post.title %></title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f8f8f8;
      color: #333;
      margin: 0;
    }

    h1 {
      text-align: center;
      padding: 20px;
      background-color: #007BFF;
      color: #fff;
    }

    p {
      max-width: 600px;
      margin: 20px auto;
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 20px;
    }

    a {
      display: block;
      text-align: center;
      margin-top: 20px;
      background-color: #007BFF;
      color: #fff;
      padding: 10px;
      border-radius: 4px;
      text-decoration: none;
    }

    a:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <h1><%= post.title %></h1>
  <p><%= post.content %></p>
  <a href="/">Back to Home</a>
</body>
</html>
